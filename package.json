{
  "name": "movierama",
  "version": "1.0.0",
  "description": "Social sharing platform for movies",
  "main": "index.js",
  "scripts": {
    "server": "env-cmd -f ./config/dev.env node server/index.js",
    "client": "npm start --prefix client",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"env-cmd -f ./config/dev.env nodemon server/index.js\" \"npm run client\"",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.2",
    "express": "^4.17.1",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.0",
    "mongoose": "^5.6.9",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "env-cmd": "^9.0.3",
    "jest": "24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
